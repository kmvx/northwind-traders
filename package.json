{
  "name": "northwind-traders",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack --hostname 127.0.0.1",
    "dev:public": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint --max-warnings 0 --fix",
    "lint:cache": "eslint --max-warnings 0 --fix --cache",
    "prettier": "prettier --write .",
    "prettier:watch": "onchange \"**/*\" -- prettier --write --ignore-unknown {{changed}}",
    "watch": "onchange \"**/*\" --exclude-path .gitignore -e './scripts/onchange.sh' -- ./scripts/onchange.sh {{changed}}",
    "format": "npm run lint && npm run prettier",
    "tsc": "tsc",
    "vitest": "vitest",
    "cov": "vitest run --coverage",
    "vitest:run": "vitest --run",
    "vitest:update": "vitest --update --run",
    "vitest:typecheck": "vitest --typecheck",
    "vitest:typecheck:run": "vitest --typecheck --run",
    "test": "npm run format && npm run tsc && npm run vitest:typecheck:run && npm run vitest:run && echo OK",
    "pw": "playwright test --forbid-only",
    "pw:rep": "playwright show-report",
    "pw:chrome": "playwright test --project=chromium",
    "pw:ui": "playwright test --ui --headed",
    "pw:debug": "playwright test --project=chromium --debug",
    "deploy:prod": "vercel build --prod && vercel deploy --prebuilt --prod && echo OK",
    "deploy": "vercel build && vercel deploy --prebuilt && echo OK",
    "auth:generate": "npx @better-auth/cli generate --config ./src/features/auth/auth.ts --output ./src/db/auth-schema.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.90.10",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@tanstack/react-table": "^8.21.3",
    "better-auth": "^1.4.5",
    "bowser": "^2.13.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "d3": "^7.9.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "lucide-react": "^0.554.0",
    "next": "^16.0.3",
    "next-themes": "^0.4.6",
    "nuqs": "^2.8.1",
    "pg": "^8.16.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tiny-invariant": "^1.3.3",
    "usehooks-ts": "^3.1.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4",
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "@types/d3": "^7.4.3",
    "@types/node": "^24",
    "@types/pg": "^8.15.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^4.0.13",
    "baseline-browser-mapping": "^2.8.32",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "onchange": "^7.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^4.0.13"
  }
}
