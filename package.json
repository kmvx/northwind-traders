{
  "name": "northwind-traders",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack --hostname 127.0.0.1",
    "dev:public": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint --max-warnings 0 --fix",
    "prettier": "NODE_OPTIONS=\"--experimental-strip-types\" prettier --write .",
    "prettier:watch": "NODE_OPTIONS=\"--experimental-strip-types\" onchange \"**/*\" -- prettier --write --ignore-unknown {{changed}}",
    "format": "npm run lint && npm run prettier",
    "tsc": "tsc",
    "vitest": "vitest",
    "cov": "vitest run --coverage",
    "vitest:run": "vitest --run",
    "vitest:update": "vitest --update --run",
    "vitest:typecheck": "vitest --typecheck",
    "vitest:typecheck:run": "vitest --typecheck --run",
    "test": "npm run format && npm run tsc && npm run vitest:typecheck:run && npm run vitest:run && echo OK",
    "deploy:prod": "vercel build --prod && vercel deploy --prebuilt --prod && echo OK",
    "deploy": "vercel build && vercel deploy --prebuilt && echo OK"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "next-themes": "^0.4.6",
    "nuqs": "^2.7.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "onchange": "^7.1.0",
    "prettier": "3.6.2",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
